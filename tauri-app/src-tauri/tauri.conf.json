{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "tauri-app",
  "version": "0.1.0",
  "identifier": "com.root.tauri-app",
  "build": {
    "beforeDevCommand": "bun dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "tauri-app",
        "width": 800,
        "height": 600,
        "dragDropEnabled": true
      }
    ],
    "withGlobalTauri": true,
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    }
  },
  "webview": {
    "permissions": {
      "microphone": true,
      "camera": true
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "entitlements": "entitlements.plist",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "This app needs microphone access for speech recognition and voice commands.",
        "NSCameraUsageDescription": "This app needs camera access for taking photos and recording videos.",
        "NSLocationWhenInUseUsageDescription": "This app needs location access for GPS and location-based features."
      },
      "exceptionDomain": null,
      "frameworks": [],
      "providerShortName": null,
      "signingIdentity": null,
      "minimumSystemVersion": "10.13"
    },
    "iOS": {
      "developmentTeam": null
    }
  },
  "plugins": {
    "deep-link": {
      "protocols": ["myapp"]
    }
  }
}
