{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "core:path:default",
    "core:event:default",
    "core:window:default",
    "core:webview:default",
    "opener:default",
    {
      "identifier": "opener:allow-open-path",
      "allow": [
        { "path": "$TEMP/**" }
      ]
    },
    {
      "identifier": "fs:allow-read",
      "allow": [
        { "path": "$APPDATA" },
        {
          "path": "$APPDATA/**"
        },
        {
          "path": "$TEMP"
        },
        {
          "path": "$TEMP/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-write",
      "allow": [
        { "path": "$APPDATA" },
        {
          "path": "$APPDATA/**"
        },
        {
          "path": "$TEMP"
        },
        {
          "path": "$TEMP/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-create",
      "allow": [
        { "path": "$APPDATA" },
        {
          "path": "$APPDATA/**"
        },
        {
          "path": "$TEMP"
        },
        {
          "path": "$TEMP/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-remove",
      "allow": [
        { "path": "$APPDATA" },
        {
          "path": "$APPDATA/**"
        },
        {
          "path": "$TEMP"
        },
        {
          "path": "$TEMP/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-exists",
      "allow": [
        { "path": "$APPDATA" },
        {
          "path": "$APPDATA/**"
        },
        {
          "path": "$TEMP"
        },
        {
          "path": "$TEMP/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-mkdir",
      "allow": [
        { "path": "$APPDATA" },
        {
          "path": "$APPDATA/**"
        },
        {
          "path": "$TEMP"
        },
        {
          "path": "$TEMP/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-read-dir",
      "allow": [
        { "path": "$APPDATA" },
        {
          "path": "$APPDATA/**"
        },
        {
          "path": "$TEMP"
        },
        {
          "path": "$TEMP/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-write-text-file",
      "allow": [
        {
          "path": "$APPDATA"
        },
        {
          "path": "$APPDATA/**"
        },
        {
          "path": "$TEMP"
        },
        {
          "path": "$TEMP/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-read-text-file",
      "allow": [
        {
          "path": "$APPDATA"
        },
        {
          "path": "$APPDATA/**"
        },
        {
          "path": "$TEMP"
        },
        {
          "path": "$TEMP/**"
        }
      ]
    },
    "fs:allow-app-read",
    "fs:allow-app-write",
    "fs:allow-app-read-recursive",
    "fs:allow-app-write-recursive",
    "notification:default",
    "notification:allow-is-permission-granted",
    "notification:allow-request-permission",
    "notification:allow-notify",
    "notification:allow-register-listener",
    "notification:allow-register-action-types",
    "deep-link:default",
    "deep-link:allow-is-registered",
    "deep-link:allow-register",
    "deep-link:allow-unregister",
    "dialog:default",
    "dialog:allow-open",
    "dialog:allow-save",
    "sql:default",
    "sql:allow-load",
    "sql:allow-execute",
    "sql:allow-select",
    "sql:allow-close",
    "store:default",
    "store:allow-get",
    "store:allow-set",
    "store:allow-delete",
    "store:allow-clear",
    "store:allow-has",
    "store:allow-save",
    "store:allow-load"
  ]
}
